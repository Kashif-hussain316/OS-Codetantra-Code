#include <stdio.h>
#include <stdlib.h> // for abs()

int main() {
    int i, n, h, t = 0;

    printf("Enter the number of Requests: ");
    scanf("%d", &n);

    int r[n]; // Declare after initializing n

    printf("Enter the Requests sequence: ");
    for (i = 0; i < n; i++) {
        scanf("%d", &r[i]);
    }

    printf("Enter initial head position: ");
    scanf("%d", &h);

    for (i = 0; i < n; i++) {
        t += abs(r[i] - h);
        h = r[i];
    }

    printf("Total head moment is %d\n", t);
    return 0;
}

