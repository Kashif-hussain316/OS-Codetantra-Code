#include <stdio.h>

    printf("Enter initial head position (0-199): ");
    scanf("%d", &head);

    printf("Enter direction (left/right): ");
    scanf("%s", direction);

    qsort(requests, n, sizeof(int), compare);

    int seek_sequence[n + 2];
    int seq_index = 0;
    int total_seek = 0;

    int split = 0;
    while (split < n && requests[split] < head) split++;

    if (strcmp(direction, "left") == 0) {
        // Move left first
        for (i = split - 1; i >= 0; i--) seek_sequence[seq_index++] = requests[i];
        seek_sequence[seq_index++] = 0; // Go to start
        for (i = split; i < n; i++) seek_sequence[seq_index++] = requests[i];
    } else {
        // Move right first
        for (i = split; i < n; i++) seek_sequence[seq_index++] = requests[i];
        seek_sequence[seq_index++] = 199; // Go to end
        for (i = split - 1; i >= 0; i--) seek_sequence[seq_index++] = requests[i];
    }

    total_seek += abs(seek_sequence[0] - head);
    for (i = 1; i < seq_index; i++) total_seek += abs(seek_sequence[i] - seek_sequence[i - 1]);

    printf("Total Seek Operations: %d\n", total_seek);
    printf("Seek Sequence: ");
    for (i = 0; i < seq_index; i++) printf("%d ", seek_sequence[i]);
    printf("\n");

    return 0;
}
