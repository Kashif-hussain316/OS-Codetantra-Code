#include <stdio.h>

int main() {
    int p1, p2;
    int counter = 0;

    printf("Enter how many times Process 1 should increment the counter: ");
    scanf("%d", &p1);

    printf("Enter how many times Process 2 should increment the counter: ");
    scanf("%d", &p2);

    for (int i = 0; i < p1; i++) {
        counter++;
    }

    for (int i = 0; i < p2; i++) {
        counter++;
    }

    int expected = p1 + p2;
    printf("Final counter value (expected: %d): %d\n", expected, counter);

    return 0;
}

